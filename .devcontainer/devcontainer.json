// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Debian + cc6502",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bookworm",
	"features": {
		"ghcr.io/jungaretti/features/make:1": {},
		"ghcr.io/devcontainers-extra/features/apt-get-packages:1": {
			"upgradePackages":true,
			"packages": "cc65 build-essential pkg-config git libusb-1.0-0-dev fakeroot debhelper dpkg-dev libb64-dev udev"
		}
	},
	"customizations": {
		"vscode": {"extensions": ["ms-vscode.makefile-tools",
		                          "tlgkccampbell.code-ca65",
								  "github.vscode-github-actions"]}
	},

	//hack to make fakeroot performant (I run Fedora, seems to affect that OS per report)
	//https://github.com/containerd/containerd/pull/7566
	"runArgs": ["--ulimit=nofile=1024:1048576"],

	"postCreateCommand": "chmod +x .devcontainer/install/install.sh && .devcontainer/install/install.sh"

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
